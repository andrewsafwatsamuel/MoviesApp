<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.search.SearchActivity"
        android:background="@color/off_white">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/search_edit_text"
            android:background="@drawable/shadows"
            android:textColor="@color/tdmb_secondary_color"
            android:imeOptions="actionDone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/search_image_view"
            android:layout_marginStart="16dp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:hint="@string/search_movie"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
    />
    <fragment
            android:layout_width="0dp"
            android:layout_height="0dp" android:name="com.example.moviesapp.subFeatures.movies.MoviesFragment"
            android:id="@+id/movies_fragment" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_edit_text" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/magnify_"
            android:id="@+id/search_image_view"
            android:contentDescription="@string/search"
            app:layout_constraintTop_toTopOf="@+id/search_edit_text"
            app:layout_constraintBottom_toBottomOf="@+id/search_edit_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/search_edit_text"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"/>

    <RelativeLayout
            android:id="@+id/previous_searches_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shadows"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_edit_text"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp">
        <TextView
                tools:text="EmptyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/previous_searches_empty_text_view"/>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/previous_search_results_list_view">
        </ListView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>