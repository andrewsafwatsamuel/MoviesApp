<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/not_connected_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <ImageView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_wifi_black_24dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/not_connected_text_view"/>
    <TextView
            android:text="@string/check_your_internet_connection"
            android:layout_centerInParent="true"
            android:id="@+id/not_connected_text_view"
            android:textColor="@color/tmdb_secondary_color"
            style="@style/not_connected_style" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:id="@+id/reload_Text_view"
            android:text="@string/try_again"
            style="@style/not_connected_style"
            android:layout_below="@id/not_connected_text_view"
            android:layout_centerHorizontal="true"
            android:textColor="@color/navy_blue" android:fontFamily="@font/abhaya_libre"/>
</RelativeLayout>