<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/not_connected_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <ImageView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_wifi_black_24dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/not_connected_text_view"/>
    <TextView
            android:text="@string/check_your_internet_connection"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:id="@+id/not_connected_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="@color/tmdb_secondary_color"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="monospace" android:layout_margin="16dp"/>
</RelativeLayout>