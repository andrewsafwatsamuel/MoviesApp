<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp" android:background="@drawable/black_green_shadow">
    <ImageView
            android:layout_width="140dp"
            android:layout_height="200dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/photo_image_view" android:scaleType="fitXY" android:background="@color/white"
            android:layout_margin="1dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_text_view"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            tools:text="name" android:fontFamily="cursive"
            android:paddingStart="4dp" android:paddingTop="4dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/role_text_view"
            android:gravity="top"
            android:textColor="@color/transparent_white"
            tools:text="character" android:fontFamily="casual"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" android:paddingStart="8dp"
            android:paddingBottom="4dp"/>
</LinearLayout>
